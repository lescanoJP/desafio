<div class ="container">
<p><h2 class="title is-3">FLOPFLIX</h2></p>
<h2 class="subtitle is-4">Sign In</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, :class =>"label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "input is-info" %>
  </div>

  <div class="field">
    <%= f.label :password, :class =>"label" %>
    <%= f.password_field :password, autocomplete: "current-password", :class => "input is-info" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" , class: "button is-info" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>